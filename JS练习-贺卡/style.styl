*
    margin 0
    padding 0
html 
    height 100%
body 
    height 100%
    font 100%/1.25 
    color: #fff
    perspective: 1000px
    background linear-gradient(to bottom, #0c3662 0%, #dee3eb 100%)
    background-color #444
.book
    width 300px
    height 300px
    position absolute 
    left 50%
    top: 50%
    // margin-top -150px
    transform: translate(0%,-50%) rotateX(50deg)
    cursor pointer 
    user-select: none
.page
    width 300px
    height 300px
    padding: 1rem
    position: absolute
    top 0
    left 0
    text-indent: 2rem
.item
    background skyblue
.out
    background-color #fff
.book-left
    cursor pointer
    transform: rotateY(180deg)
    transform-origin: 0 50%
.book-left .out
    background url(https://img.moegirl.org.cn/common/e/eb/%E6%B3%BD%E5%A1%94%E5%A5%A5%E7%89%B9%E6%9B%BC_%E6%B5%B7%E6%8A%A5.jpg)
    background-repeat no-repeat
    background-size 100%
    background-position 0 10%
    transform: translateZ(3px)
.book-right .out
    transform: translateZ(-3px)
.p3d
    transform-style: preserve-3d
.flip
    transform: rotateY(180deg)

.shadow,.img
    width 196px
    height 132px
    position absolute
    left 60px
    top 60px
.img
    background url('https://img.moegirl.org.cn/common/6/65/%E5%A5%A5%E7%89%B9%E5%9B%B0%E9%9A%BE.jpeg')
    background-size: cover
    transform-origin: 0 100%
    transform: rotateX(-80deg) skewX(-10deg)
.shadow
    background-color rgba(0,0,0,0.5)